<%= layout('/layouts/boilerplate') %>
    <h1 class="text-center">Add a new team</h1>
    <div class="col-6 offset-3">
        <form action="/teams" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Team title:</label>
                <input class="form-control" type="text" name="team[title]" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="country">Team country:</label>
                <input class="form-control" type="text" name="team[country]" id="country" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Team description:</label>
                <input class='form-control' name="team[description]" id="description" required></input>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Upload images:</label>
                <input class="form-control" type="file" id="formFileMultiple" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="year">Year founded:</label>
                <input class="form-control" type="number" name="team[year]" id="year" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="cl">Number of champions league:</label>
                <input class="form-control" type="number" name="team[championsLeague]" id="cl" required>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
        <footer>
            <a href="/teams">Return to all teams</a>
        </footer>
    </div>