<%= layout('/layouts/boilerplate') %>
    <h1>All teams</h1>
    <% for(let team of allTeams) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= team.crest %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= team.title %>
                        </h5>
                        <p class="card-text">
                            Founded in <%= team.year %> and has <%= team.championsLeague %> champions league titles
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= team.country %>
                            </small>
                        </p>
                        <a href="/teams/<%=team._id%>" class="btn btn-primary">View <%= team.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>